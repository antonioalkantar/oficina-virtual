		<repository>
			<id>prime-repo</id>
			<name>Prime Repo</name>
			<url>http://repository.primefaces.org</url>
		</repository>

		<!-- Del repositorio central de Maven se obtienen las librerias de Omnifaces 
			y sus dependencias -->
