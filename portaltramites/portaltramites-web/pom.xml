			<id>central2</id>
			<name>Maven central</name>
			<url>http://central.maven.org/maven2/</url>
			<releases>
			</releases>
		</repository>

		<!-- Del repositorio de RedHat 3rd Party se obtienen las librerias de Wildfly -->
